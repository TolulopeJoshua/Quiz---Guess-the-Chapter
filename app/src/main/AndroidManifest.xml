            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5331978820452259~7941737148" />

        <activity
            android:name=".StartPage"
            android:exported="true"/>
        <activity
            android:name=".QuestionReview"
